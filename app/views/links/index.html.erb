<%= form_for(@link, url: links_path(@link)) do |f| %>
  <div class='link_form'>
    <%= f.text_field :url, placeholder: "URL" %>
    <%= f.text_field :title, placeholder: "Title" %>
    <%= f.submit "Add Link" %>
  </div>
<% end %>

<table>
  <tr>
    <th>Link</td>
    <th>Read?</td>
    <th>Mark Read</th>
    <th>Mark Unread</th>
  </tr>
  <% @links.each do |link|%>
    <tr>
      <td><a href="<%= link.url %>"><%= link.title %></a></td>
      <td id="<%= link.id %>"><%= link.read %></td>
      <td class="read" id="read-<%= link.id %>">Mark as Read</td>
      <td class="unread" id="unread-<%= link.id %>" >Mark as Unread</td>
    </tr>
  <% end %>
</table>
